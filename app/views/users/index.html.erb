<h1 align="center">All Alpha Bloggers</h1>

<div align="center">
    <div align="center"> <%= will_paginate %> </div>
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li> <!-- will show the user gravatar and alink to its show page -->
                        <%= link_to gravatar_for(user), user_path(user) %>
                    </li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li> <!-- the pluralize will make the counting more verbose: "one article, X articles" it will only show if the user has one or more article-->
                    <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all his/her articles" } %></li>
                <%end%>
                </div>
            </div>
        </ul>
        <%end%>
        <div align="center"> <%= will_paginate %> </div>
</div>