<h1 align="center">Log In</h1>
        <!--we use the same form as the new user form except that since no database will record what we enter we must specify the path (login_path) and change the -->
<%= form_for :session, html: { class: 'form-horizontal', role: 'form' }, url: login_path do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email Address' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.password_field :password, class: 'form-control', placeholder: 'Enter Password' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit('Log in', class: 'btn btn-primary btn-lg') %>
    </div>
  </div>
<% end %>